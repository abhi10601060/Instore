<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/parent"
        android:layout_marginLeft="5dp"
        >

        <ImageView
            android:id="@+id/post_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/options_menu"
            android:layout_alignParentEnd="true"
            android:layout_margin="15dp"
            android:id="@+id/options_menu_img"/>

        <TextView
            android:id="@+id/post_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_toLeftOf="@+id/options_menu_img"
            android:layout_toRightOf="@+id/post_image"
            android:text="bhjgshbgbbhsbbbhsbgbbsgbbgsbbgbbsbjkbsghbnjgn"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/post_download_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/post_name"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="20dp"
            android:text="10/jan" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200 kb | "
            android:layout_alignBottom="@+id/post_download_date"
            android:layout_toLeftOf="@+id/post_download_date"
            android:id="@+id/post_size"/>

    </RelativeLayout>




</com.google.android.material.card.MaterialCardView>